<div class="page-header">
	<h1>Tratamientos</h1>
</div>

<div class="row">
	<div class="col-md-3">
		<h2>
			Catálogo
			<button class="btn btn-success pull-right">
				<i class="glyphicon glyphicon-plus-sign"></i>
				Nuevo
			</button>
		</h2>
		<table class="table table-condensed table-bordered">
			<thead>
				<tr>
					<th>
						Nombre
					</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				<% @list.each do |t| %>
				<tr>
					<td><%= t.nombre %></td>
					<td class="form-actions">
						<button class="btn btn-xs btn-link">
							<i class="glyphicon glyphicon-pencil"></i>
						</button>
						<form action="/tratamientos/<%= t.id %>" method="post">
							<input type="hidden" name="_method" value="delete">
							<button class="btn btn-xs btn-link">
								<i class="glyphicon glyphicon-remove"></i>
							</button>
						</form>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-9">
		<h2>Detalle de tratamientos</h2>

		<table class="table table-striped table-bordered">
			<thead>
				<th>Animal</th>
				<th>Tratamiento</th>
				<th>Fecha de aplicación</th>
				<th>Veterinario</th>
			</thead>
			<tbody>
				<tr>
					<td><a href="animal.html">Tyson</a></td>
					<td>Sarna demodésica</td>
					<td>12-03-2014</td>
					<td>Rubí Pillado</td>
				</tr>
				<tr>
					<td><a href="animal.html">Totti</a></td>
					<td>Parvovirus</td>
					<td>11-10-2014</td>
					<td>Federico Mejía</td>
				</tr>
				<tr>
					<td><a href="animal.html">Laika</a></td>
					<td>Cataratas</td>
					<td>03-09-2014</td>
					<td>Rubí Pillado</td>
				</tr>
				<tr>
					<td><a href="animal.html">Neko</a></td>
					<td>Dermatitis</td>
					<td>23-02-2014</td>
					<td>Federico Mejía</td>
				</tr>
				<tr>
					<td><a href="animal.html">Kuro</a></td>
					<td>Sarna sarcáptica</td>
					<td>30-12-2014</td>
					<td>Rubí Pillado</td>
				</tr>
				<tr>
					<td><a href="animal.html">Rambo</a></td>
					<td>Parvovirus</td>
					<td>03-09-2014</td>
					<td>Federico Mejía</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>