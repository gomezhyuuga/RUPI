-# coding: utf-8
!!!
%html
	%head
		%meta{charset: "utf-8"}/
		%meta{name: "viewport", content: "width=device-width, initial-scale=1" }/
		%title Adopciones RUPI

		-# Bootstrap
		%link{rel: "stylesheet", href: "/vendor/bootstrap/css/bootstrap.min.css"}/
		%link{rel: "stylesheet", href: "/css/cerulean.css"}/

		-# Application
		%link{rel: "stylesheet", href: "/css/rupi.css"}/

		:plain
			<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
			<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
			<!--[if lt IE 9]>
			  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
			<![endif]-->
	%body
		%nav{ class: "navbar navbar-inverse navbar-fixed-top", role: "navigation" }
			.container
				%a.navbar-brand{ href: "/" } RUPI
				%ul.nav.navbar-nav
					%li.animales <a href="/animales">Animales</a>
					%li.tratamientos <a href="/tratamientos">Tratamientos</a>
					%li.medicinas <a href="/tratamientos">Medicinas</a>

				%form.navbar-form.navbar-right{role: "search"}
					.form-group
						%input.form-control{placeholder: "Buscar", type: "search"}
		%section.container
			.bg
				= yield
		- if @debug
			%section.container
				= @debug

		%footer
			%p Proyecto Base de Datos <a href="#">ITESM CEM</a>

		%script{src: "/js/jquery.min.js"}
		%script{src: "/vendor/bootstrap/js/bootstrap.min.js"}
		%script{src: "/vendor/select2/select2.js"}
		%script{src: "/vendor/datepicker/js/bootstrap-datepicker.js"}
		%script{src: "/js/rupi.js"}